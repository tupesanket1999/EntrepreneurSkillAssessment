<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:color="#03A9F4">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid
                android:color="#03A9F4"/>
            <corners
                android:radius="12dp"/>
            <stroke
                android:width="1dp"
                android:color="#FFF"/>
            <padding
                android:top="0dp"
                android:right="10dp"
                android:left="10dp"
                android:bottom="0dp"/>
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid
                android:color="#FFFFFF"/>
            <corners
                android:radius="12dp"/>
            <stroke
                android:width="1dp"
                android:color="#03A9F4"/>
            <padding
                android:top="0dp"
                android:right="10dp"
                android:left="10dp"
                android:bottom="0dp"/>
        </shape>

    </item>



</ripple>