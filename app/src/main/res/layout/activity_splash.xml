<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="12dp"
    android:id="@+id/lay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/logoGrp"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/unilogo"
            android:id="@+id/logo"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/savitribai_phule_pune_university"
            android:id="@+id/sppu"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/department_of_lifelong_learning_and_extension"
            android:id="@+id/dept"
            android:gravity="center"/>
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nabha_entrepreneurial_skill_assessment_scale"
        android:id="@+id/nabha"
        android:gravity="center"
        android:textSize="24dp"
        android:layout_margin="24dp"
        android:layout_below="@+id/logoGrp"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/developed_by_dr_navnath_bhagchand_tupe"
        android:id="@+id/navnath"
        android:gravity="center"
        android:layout_alignParentBottom="true" />


</RelativeLayout>